{% extends './front.twig' %}

{% block title %}
  Account Login
{% endblock %}

{% block content %}
  <div class="py-24 w-5/6 mx-auto">
    <!-- main login form -->
    <div class="w-full">
      <h4 class="font-bold text-center text-lg underline">
        Already have an Account?
      </h4>
      <form action="#">
        <div class="flex flex-col py-1">
          <label class="tracking-wide pt-1 font-light" for="uname">
            Username:
          </label>
          <input class="py-2 px-3 border-2 rounded-md outline-none focus:border-purple-700 font-light"
            type="text"
            name="login-uname"
            placeholder="Enter your username" />
        </div>
        <div class="flex flex-col py-1">
          <label class="tracking-wide pt-1 font-light" for="passwd">
            Password:
          </label>
          <input class="py-2 px-3 border-2 rounded-md outline-none focus:border-purple-700 font-light"
            type="password"
            name="login-password"
            placeholder="Enter your password" />
        </div>
        <div class="flex items-center py-1">
          <input type="checkbox" name="" />
          <span class="pl-1 font-light text-sm tracking-wide">
            Remember this account
          </span>
        </div>
        <div class="flex justify-center py-2">
          <input type="submit"
            value="Login"
            class="py-2 px-10 text-sm uppercase tracking-wide font-bold bg-purple-500 hover:bg-purple-700 cursor-pointer text-white rounded" />
        </div>
      </form>
    </div>

    <hr class="my-8" />

    <!-- register account button -->
    <div class="flex items-center justify-center">
      <h4 class="text-center font-light tracking-wide">
        Don't have an account?
      </h4>
      <a href="/register"
        type="button"
        class="pl-2 uppercase text-purple-700 hover:underline font-bold">
        Register
      </a>
    </div>
  </div>
{% endblock %}
